snippet eslint
extends:
  - eslint:recommended
  - plugin:react/recommended

parser: babel-eslint

env:
  browser: true
  es6: true

rules:
  react/prop-types: 0
  no-console: 0
endsnippet


snippet version
version: '3'
services:
  server:
    image: nginx
    container_name: server
    ports:
      - '80:80'
endsnippet


snippet pre
repos:
  - repo: local
    hooks:
      - id: rustfmt
        name: rustfmt
        language: script
        entry: /usr/bin/env rustfmt
        types: [rust]

  - repo: https://github.com/prettier/prettier
    rev: '1.17.1'
    hooks:
      - id: prettier
        files: '\.(js|ts|html|css|scss|less)$'

  - repo: https://github.com/ambv/black
    rev: 19.10b0
    hooks:
      - id: black
        language_version: python3

  - repo: https://gitlab.com/pycqa/flake8
    rev: '3.7.9'
    hooks:
      - id: flake8
        language_version: python3

  - repo: https://github.com/timothycrosley/isort
    rev: '4.3.21-2'
    hooks:
      - id: isort
        additional_dependencies:
          - toml

  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v2.4.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: debug-statements
endsnippet


snippet prettier
singleQuote: true
trailingComma: all
printWidth: 100
endsnippet


snippet deploy
apiVersion: apps/v1
kind: Deployment
metadata:
  name: tmp-deployment
  labels:
    app: tmp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: tmp
  template:
    metadata:
      labels:
        app: tmp
    spec:
      containers:
        - name: tmp
          image: alpine
          args:
            - sh
            - -c
            - sleep 999999
          volumeMounts:
            - name: data
              mountPath: /data
      volumes:
        - name: data
          persistentVolumeClaim:
            claimName: tmp-data
endsnippet
